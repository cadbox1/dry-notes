{
	"compilerOptions": {
		"baseUrl": "src",

		"target": "ES2015",
		"module": "ES2020",
		"outDir": "dist",
		"declaration": true,

		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react"
	},
	"include": ["src"]
}
